# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Pressing the same workspace number again to switch back to prev. workspace
workspace_auto_back_and_forth yes

set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:Roboto 10
font pango:Roboto Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# focus does not follow mouse
focus_follows_mouse no

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+odiaeresis focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+J move left
bindsym $mod+Shift+K move down
bindsym $mod+Shift+L move up
bindsym $mod+Shift+Odiaeresis move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindcode $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace shell
bindsym $mod+2 workspace c0de
bindsym $mod+3 workspace browser
bindsym $mod+4 workspace com
bindsym $mod+5 workspace misc
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace uibtime

# move focused container to workspace
bindsym $mod+Shift+exclam move container to workspace shell
bindsym $mod+Shift+quotedbl move container to workspace c0de
bindsym $mod+Shift+section move container to workspace browser
bindsym $mod+Shift+dollar move container to workspace com
bindsym $mod+Shift+percent move container to workspace misc
bindsym $mod+Shift+ampersand move container to workspace 6
bindsym $mod+Shift+slash move container to workspace 7
bindsym $mod+Shift+parenleft move container to workspace 8
bindsym $mod+Shift+parenright move container to workspace 9
bindsym $mod+Shift+equal move container to workspace uibtime

# Window assignments
assign [class="uibtime.exe"] uibtime
assign [class="Wine"] uibtime
assign [instance="^Mail$" class="^Icedove$"] com
assign [instance="^Mail$" class="^Thunderbird$"] com
assign [instance="Navigator" class="Iceweasel"] browser
assign [instance="Navigator" class="Firefox"] browser
assign [instance="Chromium" class="Chromium"] browser
assign [window_role="browser"] browser

# Notifications should float 
for_window [class="Xfce4-notifyd"] floating enable, border none

# Autostart
# Gnome Keyring to fix error messages everywhere.
exec gnome-keyring-daemon --start --daemonize --replace
# Compositor for real transparency
exec (sleep 5 && compton)
# Restoring wallpaper
exec nitrogen --restore
# Using redshift to relax the eyes
# Location is Frankfurt am Main, Germany
exec (sleep 10 && redshift -l 50.117:8.683)
# Starting time tracker at work
exec ~/bin/start_uibtime.sh
# Browser
exec firefox
# Mailclient
exec thunderbird
# Filesync
exec owncloud

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+E exit

# toggle window border
bindsym $mod+B border toggle

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym 113 resize shrink width 10 px or 10 ppt
        bindsym 116 resize grow height 10 px or 10 ppt
        bindsym 111 resize shrink height 10 px or 10 ppt
        bindsym 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command python3 ~/code/pyStatus/runner.py
}
